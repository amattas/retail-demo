{
  "$schema": "https://fabric.microsoft.com/schemas/pipeline/2024-01-01-preview",
  "_comment": "Using preview API version - update to stable version when available",
  "name": "pl_bronze_to_silver",
  "description": "Runs the Bronze â†’ Silver notebook on a schedule (reads from cusn schema, writes to ag schema)",
  "activities": [
    {
      "name": "BronzeToSilverNotebook",
      "type": "Notebook",
      "properties": {
        "notebookResourceId": "<fabric-notebook-resource-id: 02-onelake-to-silver>",
        "parameters": {
          "SILVER_DB": "ag",
          "BRONZE_SCHEMA": "cusn"
        }
      },
      "policy": {
        "retry": 3,
        "retryIntervalInSeconds": 30,
        "secureOutput": false,
        "timeout": "01:00:00"
      }
    }
  ],
  "triggers": [
    {
      "name": "Every5Minutes",
      "type": "Schedule",
      "properties": {
        "recurrence": "PT5M",
        "startTime": "<utc-iso8601>"
      }
    }
  ]
}

