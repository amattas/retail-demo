{
  "$schema": "https://fabric.microsoft.com/schemas/pipeline/2024-01-01-preview",
  "// NOTE": "Using preview API version - update to stable version when available",
  "name": "pl_silver_to_gold",
  "description": "Runs the Silver â†’ Gold aggregates notebook on a schedule (reads from ag schema, writes to au schema)",
  "activities": [
    {
      "name": "SilverToGoldNotebook",
      "type": "Notebook",
      "properties": {
        "notebookResourceId": "<fabric-notebook-resource-id: 03-silver-to-gold>",
        "parameters": {
          "SILVER_DB": "ag",
          "GOLD_DB": "au"
        },
        "timeout": "00:30:00"
      },
      "policy": {
        "retry": 3,
        "retryIntervalInSeconds": 30,
        "secureOutput": false,
        "timeout": "00:30:00"
      }
    }
  ],
  "triggers": [
    {
      "name": "Every15Minutes",
      "type": "Schedule",
      "properties": {
        "recurrence": "PT15M",
        "startTime": "<utc-iso8601>"
      }
    }
  ]
}

