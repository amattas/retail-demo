{
  "$schema": "https://fabric.microsoft.com/schemas/pipeline/2024-01-01-preview",
  "name": "pl_adls_parquet_to_lakehouse",
  "description": "Copies Parquet files from ADLS to Lakehouse Files with Fabric V-Order",
  "activities": [
    {
      "name": "CopyAdlsParquetNotebook",
      "type": "Notebook",
      "properties": {
        "notebookResourceId": "<fabric-notebook-resource-id: adls_parquet_to_lakehouse>",
        "parameters": {
          "ADLS_ACCOUNT": "<adls-account>",
          "ADLS_CONTAINER": "<adls-container>",
          "ADLS_PATH_PREFIX": "",
          "LAKEHOUSE_BASE": "/lakehouse/default/Files/adls-parquet-copy",
          "WRITE_MODE": "append",
          "DRY_RUN": "false"
        },
        "timeout": "01:00:00"
      }
    }
  ],
  "triggers": [
    {
      "name": "Daily1AMUTC",
      "type": "Schedule",
      "properties": {
        "recurrence": "P1D",
        "startTime": "<utc-iso8601-01:00>"
      }
    }
  ]
}
